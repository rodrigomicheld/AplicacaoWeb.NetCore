
@model SalesWebMVC.Models.Vendedor
@{
    ViewData["Title"] = "Novo";
}

<h2>@ViewData["Title"]</h2>

<h4>Vendedor</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Novo">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DataNasciemnto" class="control-label"></label>
                <input asp-for="DataNasciemnto" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Salario" class="control-label"></label>
                <input asp-for="Salario" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
